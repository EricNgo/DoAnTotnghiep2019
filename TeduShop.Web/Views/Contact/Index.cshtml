@model TeduShop.Web.Models.FeedbackViewModel
@using BotDetect.Web.Mvc;
@{
    ViewBag.Title = "Liên hệ";
    ViewBag.MetaKeyword = "liên hệ";
    ViewBag.MetaDescription = "Thông tin liên hệ của TTG Shop";
    Layout = "~/Views/Shared/ProductLayouts.cshtml";
}

@*<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>*@
<link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl" rel="stylesheet" type="text/css" />
@*<script src="~/Assets/client/js/controllers/contact.js"></script>*@
<style>
    #map {
        height: 50%;
    }

</style>

<input type="hidden" id="hidAddress" value="@Model.ContactDetail.Name<br />Điện thoại:@Model.ContactDetail.Phone <br>Địa chỉ: @Model.ContactDetail.Address" />
<input type="hidden" id="hidLat" value="@Model.ContactDetail.Lat" />
<input type="hidden" id="hidLng" value="@Model.ContactDetail.Lng" />
<input type="hidden" id="hidName" value="@Model.ContactDetail.Name" />


<div class="container">
    <div class="ctnt-bar cntnt">
        <div class="content-bar">
            <div class="contact">
                <div class="container">
                    <h3>Information Contact</h3>
                    <p>Our Address :</p>
                    <p>@Model.ContactDetail.Address</p>
                    <dl>
                        <dt> </dt>
                        <dd>Điện thoại:<span> @Model.ContactDetail.Phone</span></dd>
                        <dd>E-mail:&nbsp; <a href="mailto:@(Model.ContactDetail.Email)">@(Model.ContactDetail.Email)</a></dd>
                    </dl>
                    <div class="clearfix"></div>

                </div>
                <div id="map" style="width: 950px; height: 470px; margin-left:auto;margin-right:auto ;display:block">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.3484559171957!2d106.66705131407092!3d10.784601261993513!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752ed1437019a5%3A0xcd287fd8edae05ba!2zNDY4IEPDoWNoIE3huqFuZyBUaMOhbmcgOCwgUGjGsOG7nW5nIDExLCBRdeG6rW4gMywgSOG7kyBDaMOtIE1pbmgsIFZp4buHdCBOYW0!5e0!3m2!1svi!2s!4v1537800928413" width="980" height="480" frameborder="0" style="border:0" allowfullscreen></iframe>Google Map</div>
            </div>
        </div>

    </div>
    <div class="single-bottom2">
        <div class="contact">
            <div class="container">
                <h3>CONTACT US</h3>
                <p>Please contact us for all inquiries and purchase options.</p>
                    @using (Html.BeginForm("SendFeedback", "Contact", FormMethod.Post))
                    {
                        if (ViewData["SuccessMsg"] != null)
                        {
                <div class="alert alert-success" role="alert">
                    <strong>Congratulation ! </strong> Send feedback successfully.
                    <br />We will contact you again as soon as possible.
                </div>
                        }
                        @Html.ValidationSummary(false, "", new { @class = "error" });
                        @Html.TextBoxFor(model => model.Name, new { @class = "textbox", placeholder = "Your Name..." });
                        @Html.TextBoxFor(model => model.Email, new { @class = "textbox", placeholder = "Your Email..." });
                        @Html.TextAreaFor(model => model.Message, new { placeholder = "Your Comment....."});


                        MvcCaptcha contactCaptcha = new MvcCaptcha("contactCaptcha");
                            <div class="captchabox" style="margin-left:100px">
                                @Html.Captcha(contactCaptcha);
                            </div>
                       
                        @Html.TextBox("CaptchaCode")

                        <input type="submit" value="Gửi đi">
                        <div class="clearfix"> </div>
                    }
            </div>
        </div>
    </div>
</div>

<script src="" ~/Assets/client/js/jquery.easydropdown.js"></script>
<link href="" ~/Assets/client/css/nav.css" rel="stylesheet" type="text/css" media="all" />
<script src="" ~/Assets/client/js/scripts.js" type="text/javascript"></script>

