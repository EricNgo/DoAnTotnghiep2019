@model TeduShop.Web.Infrastructure.Core.PaginationSet<TeduShop.Web.Models.ProductViewModel>
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/StoreLayouts.cshtml";
    var category = (TeduShop.Web.Models.ProductCategoryViewModel)ViewBag.Category;
}
<div class="bike-parts">
    @if (Model.Count > 0)
    {
    <div class="top">

        <ul>
            <a href="/@(category.Alias).pc-@(category.ID).html/">@category.Name - <span>@Model.TotalCount sản phẩm</span> </a>
            <br />
            <li>Sort : </li>
            <li><a href="?page=@Model.Page&sort=popular">Popular |</a></li>
            <li><a href="?page=@Model.Page&sort=new">New |</a></li>
            <li><a href="?page=@Model.Page&sort=discount">Discount |</a></li>
            <li><a href="?page=@Model.Page&sort=price">Low Price</a></li>
            <br />

        </ul>
    </div>
        <div class="bike-apparels">
            <div class="parts1">
                @foreach (var product in Model.Items)
                {
                    var url = "/" + product.Alias + ".p-" + product.ID + ".html/";
                    <a href="@url">
                        <div class="part-sec">
                            <div><img src="@product.Image" alt="@product.Name" /></div>
                            <div class="bike-cost">
                                <h5>@product.Price.ToString("N0") $</h5>
                                <h5><span>Model :<Strong> @product.Name</Strong></span></h5>
                                <div class="bike-cart">
                                    <a class="add-cart  grow-rotate" href="@url">Quick View</a>
                                    <a class="buy float-shadow" href="@url">BUY NOW</a>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </a>
                }
                <div class="clearfix"></div>
            </div>
            @if (Model.TotalPages > 1)
            {
                // Create numeric links
                var startPageIndex = Math.Max(1, Model.Page - Model.MaxPage / 2);
                var endPageIndex = Math.Min(Model.TotalPages, Model.Page + Model.MaxPage / 2);

                <nav>
                    <ul class="pagination">
                        @if (Model.Page > 1)
                        {
                            <li>
                                <a href="?page=1" aria-label="First">
                                    <i class="fa fa-angle-double-left"></i>
                                </a>
                            </li>
                            <li>
                                <a href="?page=@(Model.Page-1)" aria-label="Previous">
                                    <i class="fa fa-angle-double-left"></i>
                                </a>
                            </li>
                        }

                        @for (int i = startPageIndex; i <= endPageIndex; i++)
                        {
                            if (Model.Page == i)
                            {
                                <li class="active"><a href="?page=@i" title="Trang @i">@i</a></li>
                            }
                            else
                            {
                                <li><a href="?page=@i" title="Trang @i">@i</a></li>
                            }
                        }
                        @if (Model.Page < Model.TotalPages)
                        {
                            <li>
                                <a href="?page=@(Model.Page+1)" aria-label="Next">
                                    <i class="fa fa-angle-double-right"></i>
                                </a>
                            </li>
                            <li>
                                <a href="?page=@Model.TotalPages" aria-label="Last">
                                    <i class="fa fa-angle-double-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    }
    else
    {
        <div class="text-center">Không có bản ghi nào được tìm thấy.</div>
    }
</div>