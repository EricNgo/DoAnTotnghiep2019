@model TeduShop.Web.Models.ProductViewModel
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/ProductLayouts.cshtml";
}

<div class="product">
<div class="container">
    <div class="ctnt-bar cntnt">
        <div class="content-bar">
            <div class="single-page">
                <div class="product-head">
                    <a href="index.html"><span>HOME</span></a> 
                </div>
                <!--Include the Etalage files-->
                <link rel="stylesheet" href="~/Assets/client/css/etalage.css">
                <script src="~/Assets/client/js/jquery.etalage.min.js"></script>
                <script>
                    jQuery(document).ready(function ($) {

                        $('#etalage').etalage({
                            thumb_image_width: 500,
                            thumb_image_height: 400,
                            source_image_width: 800,
                            source_image_height: 1000,
                            show_hint: true,
                            click_callback: function (image_anchor, instance_id) {
                                alert('Callback example:\nYou clicked on an image with the anchor: "' + image_anchor + '"\n(in Etalage instance: "' + instance_id + '")');
                            }
                        });

                    });
                </script>
                <!--//details-product-slider-->
                <div class="details-left-slider">
                    <div class="grid images_3_of_2">
                        <ul id="etalage">
                            <li>
                                <a href="optionallink.html">
                                    <img class="etalage_thumb_image" src="@Model.Image" class="img-responsive" alt="@Model.Name" />
                                    <img class="etalage_source_image" src="@Model.Image" class="img-responsive" title="" alt="@Model.Name" />
                                </a>
                            </li>
                            @{
                                var moreImages = (List<string>)ViewBag.MoreImages;
                                if (moreImages.Count > 0)
                                {
                                    foreach (var image in moreImages)
                                    {
                                        <li>
                                            <img class="etalage_thumb_image" src="@image" class="img-responsive" />
                                            <img class="etalage_source_image" src="@image" class="img-responsive" title="" />
                                        </li>
                                    }
                                }
                            }
                        </ul>
                    </div>
                </div>
                <div class="details-left-info">
                    <h3>@Model.Name</h3>
                    <h4>Model No: 3498</h4>
                    <h4></h4>
                    <p><label>$</label> @Model.Price<a href="#">Click for offer</a></p>
                    <p class="size">SIZE ::</p>
                    <a class="length" href="#">XS</a>
                    <a class="length" href="#">M</a>
                    <a class="length" href="#">S</a>
                    <div class="btn_form">
                        <a href="cart.html">buy now</a>
                        <a href="#" data-id="@Model.ID" class="btnAddToCart">ADD TO CART</a>
                    </div>
                    <div class="bike-type">
                        <p>
                            Tag ::
                            @foreach (var tag in (IEnumerable<TeduShop.Web.Models.TagViewModel>)ViewBag.Tags)
                            {
                                <a href="/tag/@(tag.ID).html/">@(tag.Name) </a>
                            }
                        </p>
                        <p>Products in stock ::<a href="#">@Model.Quantity  </a></p>
                    </div>
                    <h5>Description  ::</h5>
                    <p class="desc">
                        @Model.Description
                    </p>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    @{
        var relatedProducts = (IEnumerable<TeduShop.Web.Models.ProductViewModel>)ViewBag.RelatedProducts;
    }
    <div class="single-bottom2">
        <h6>Related Products</h6>
        @foreach (var product in relatedProducts)
        {
            <div class="product">
                <div class="product-desc">
                    <div class="product-img product-img2">
                        <img src="@product.Image" class="img-responsive " alt="@product.Name" />
                    </div>
                    <div class="prod1-desc">
                        <h5><a class="product_link" href="bicycles.html">@product.Name</a></h5>
                        <p class="product_descr"> @product.Description </p>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="product_price">
                    <span class="price-access">$ @product.Price</span>
                    <a class="button1 btnAddToCart" href="#" data-id="@Model.ID"><span>Add to cart</span></a>
                </div>
            </div>

        }
    </div>
</div>
    </div>
<script src="" ~/Assets/client/js/jquery.easydropdown.js"></script>
<link href="" ~/Assets/client/css/nav.css" rel="stylesheet" type="text/css" media="all" />
