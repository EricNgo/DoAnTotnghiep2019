
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/ProductLayouts.cshtml";
}


<div class="cart">
</div>
<div id="cartBody">
</div>
<script>
    $(document).ready(function (c) {
        $('.close1').on('click', function (c) {
            $('.cart-header').fadeOut('slow', function (c) {
                $('.cart-header').remove();
            });
        });
    });
</script>

<script id="tplCart" type="x-tmpl-mustache">
    <div class="cart">
        <div class="container">
            <div class="col-md-9 cart-items">
                <div class="cart-top">
                    <a href="index.html"><< home</a>
                </div>
                <div class="cart-header">
                    <div class="close1"></div>
                    <div class="cart-sec">
                        <div class="cart-item cyc">
                            <img src="{{Image}}" />
                        </div>
                        <div class="cart-item-info">
                            <h3>{{ProductName}}<span>Model No: 3578</span></h3>
                            <h4><span>Rs. $ </span>{{PriceF}}</h4>
                            <p class="qty">Qty ::</p>
                            @*<input min="1" type="number" id="quantity" name="quantity" value="1" class="form-control input-small">*@
                            <input type="number" data-id="{{ProductId}}" data-price="{{Price}}" value="{{Quantity}}" class="input txtQuantity" />
                        </div>
                        <div class="clearfix"></div>
                        <div class="delivery">
                            <p>Service Charges:: Rs.100.00</p>
                            <span>Delivered in 2-3 bussiness days</span>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 cart-total">
                <a class="continue" href="#">Continue to basket</a>
                <div class="price-details">
                    <h3>Price Details</h3>
                    <span>Total</span>
                    <span class="total" id="amount_{{ProductId}}">{{Amount}}</span>
                    <span>Discount</span>
                    <span class="total">---</span>
                    <span>Delivery Charges</span>
                    <span class="total">150.00</span>
                    <div class="clearfix"></div>
                </div>
                <h4 class="last-price">TOTAL</h4>
                <span class="total final">6350.00</span>
                <div class="clearfix"></div>
                <a class="order" href="#">Place Order</a>
                <div class="total-item">
                    <h3>OPTIONS</h3>
                    <h4>COUPONS</h4>
                    <a class="cpns" href="#">Apply Coupons</a>
                    <p><a href="#">Log In</a> to use accounts - linked coupons</p>
                </div>
            </div>

        </div>
        </div>

</script>
