<script id="tplCart" type="x-tmpl-mustache">

        <div class="cart-header">
            <div class="close1  btnDeleteItem" data-id="{{ProductId}}">
            </div>
            <div class="cart-sec">
                <div class="cart-item cyc">
                    <img src="{{Image}}" />
                </div>
                <div class="cart-item-info">
                    <h3>{{ProductName}}<span>Model No: 3578</span></h3>
                    <h5><span>Price: $ </span>{{PriceF}}</h5>
                    <p class="qty">Quality::</p>
                    @*<input min="1" type="number" id="quantity" name="quantity" value="1" class="form-control input-small">*@
                    <input type="number" min="1" data-id="{{ProductId}}" data-price="{{Price}}" value="{{Quantity}}" class="form-control input-small txtQuantity" />
                    <h5 class="qty" id="amount_{{ProductId}}"><span><strong>Total: $ </strong></span>{{Amount}} </h5>
                </div>
                <div class="clearfix"></div>
                <div class="delivery">

                    <p>Service Charges:: Rs.100.00</p>
                    <span>Delivered in 2-3 bussiness days</span>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
</script>



