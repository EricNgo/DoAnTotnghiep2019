
@{
    ViewBag.Title = "Shopping Cart";
    ViewBag.MetaKeyword = "shoppingcart";
    ViewBag.MetaDescription = "Thanh Toán Sản Phẩm";
    Layout = "~/Views/Shared/ProductLayouts.cshtml";
}
<script>
    $(document).ready(function (c) {
        $('.close1').on('click', function (c) {
            $('.cart-header').fadeOut('slow', function (c) {
                $('.cart-header').remove();
            });
        });
    });
</script>
